<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lixinxin.bigdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DialogActivity"
            android:theme="@style/Base.Theme.AppCompat.Dialog.MinWidth" />
        <activity android:name=".ui.NormalActivity"></activity>

        <service android:name=".service.MyService" />
        <service android:name=".service.BindService" />

    </application>

</manifest>
